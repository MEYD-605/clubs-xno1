---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navbar from '../components/navbar';
import Footer from '../components/footer';
import FloatingButtons from '../components/floating-buttons';
import TerminalConsole from '../components/terminal-console';
import '../styles/globals.css';

const title = "Command Center | Club S by Bo";
const description = "System dashboard for managing bookings and backend automation";

export const prerender = true;
---

<BaseLayout>
    <Navbar client:load />
    
    <main class="min-h-screen pt-24">
      <!-- Hero Section -->
      <section class="section-padding gradient-mesh">
        <div class="container mx-auto container-narrow text-center">
          <div class="inline-block px-4 py-2 rounded-full mb-6 font-medium" style="background: rgba(255,107,53,0.1); color: #FF6B35;">
            Admin Access Only
          </div>
          <h1 class="text-display-lg mb-6">My Command Center</h1>
          <p class="text-body-lg mb-8">
            A system dashboard for managing bookings, content, and backend automation
          </p>
          <div class="inline-flex items-center px-4 py-2 rounded-full" style="background: rgba(255,255,255,0.1);">
            <span class="mr-2">ðŸ”’</span>
            <span class="text-white/70">Secure Admin Area</span>
          </div>
        </div>
      </section>

      <!-- Login Section -->
      <section class="py-10">
        <div class="container mx-auto px-4">
          <div class="max-w-md mx-auto glass-card p-8">
            <h3 class="text-heading mb-6 text-center">Admin Login</h3>
            <form class="space-y-4">
              <div>
                <label class="block text-sm font-medium text-white mb-2">Username</label>
                <input 
                  type="text" 
                  class="w-full px-4 py-3 rounded-xl bg-white/5 border border-white/10 text-white placeholder:text-white/40 focus:outline-none focus:border-orange-400/50"
                  placeholder="Enter username"
                />
              </div>
              <div>
                <label class="block text-sm font-medium text-white mb-2">Password</label>
                <input 
                  type="password" 
                  class="w-full px-4 py-3 rounded-xl bg-white/5 border border-white/10 text-white placeholder:text-white/40 focus:outline-none focus:border-orange-400/50"
                  placeholder="Enter password"
                />
              </div>
              <button type="submit" class="btn-primary w-full">
                Login
              </button>
            </form>
          </div>
        </div>
      </section>

      <!-- Command Interface Section -->
      <section class="section-padding gradient-dark">
        <div class="container mx-auto container-wide">
          <div class="text-center mb-12">
            <h2 class="text-display-md mb-4">Command Interface</h2>
            <p class="text-accent mb-4" style="color: #FF6B35;">
              Connected to <strong>Maha Hybrid Cluster</strong> via Sentinel Protocol.
            </p>
            <p class="text-body-lg">Manage your entire business with simple text commands</p>
          </div>

          <TerminalConsole client:load />
        </div>
      </section>

      <!-- Features Section -->
      <section class="section-padding">
        <div class="container mx-auto container-wide">
          <div class="text-center mb-12">
            <h2 class="text-display-md mb-4">System Features</h2>
            <p class="text-body-lg">Powerful tools to manage your business efficiently</p>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            <div class="glass-card p-8">
              <div class="text-4xl mb-6">ðŸ’»</div>
              <h3 class="text-heading mb-3">Command Interface</h3>
              <p class="text-body">
                Manage your entire business with simple text commands and get instant results.
              </p>
            </div>

            <div class="glass-card p-8">
              <div class="text-2xl font-bold mb-6" style="color: #FF6B35;">n8n</div>
              <h3 class="text-heading mb-3">Workflow Automation</h3>
              <p class="text-body">
                Powerful n8n workflows that automate repetitive tasks and business processes.
              </p>
            </div>

            <div class="glass-card p-8">
              <div class="text-4xl mb-6">ðŸ“Š</div>
              <h3 class="text-heading mb-3">Analytics Dashboard</h3>
              <p class="text-body">
                Comprehensive analytics to track your business performance and make data-driven decisions.
              </p>
            </div>
          </div>
        </div>
      </section>

      <!-- CTA Section -->
      <section class="section-padding" style="background: #FF6B35;">
        <div class="container mx-auto container-narrow text-center">
          <h2 class="text-display-md mb-6 text-white">"Automation is the key to scaling your creative business."</h2>
          <p class="text-xl mb-8 text-white/90">
            Interested in building a similar system for your business? Let's discuss how automation can help you scale.
          </p>
          <a href="/contact" class="inline-block bg-white text-[#FF6B35] px-8 py-4 rounded-full font-medium text-lg hover:scale-105 transition-transform">
            Contact Me
          </a>
        </div>
      </section>
    </main>

    <Footer client:load />
    <FloatingButtons client:load />
</BaseLayout>
